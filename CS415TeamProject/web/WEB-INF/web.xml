<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <description>Test Servlet</description>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>edu.jsu.mcis.cs415.teamproject.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PunchList</servlet-name>
        <servlet-class>edu.jsu.mcis.cs415.teamproject.PunchList</servlet-class>
    </servlet>
    <servlet>
        <description>IndividualPunch</description>
        <servlet-name>IndividualPunch</servlet-name>
        <servlet-class>edu.jsu.mcis.cs415.teamproject.IndividualPunch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>edu.jsu.mcis.cs415.teamproject.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/main/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PunchList</servlet-name>
        <url-pattern>/main/PunchList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndividualPunch</servlet-name>
        <url-pattern>/main/IndividualPunch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/main/EmployeeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>main/index.jsp</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Main</display-name>
        <web-resource-collection>
            <web-resource-name>Main</web-resource-name>
            <description/>
            <url-pattern>/main/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Default Constraint</description>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp?result=false</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>user</role-name>
    </security-role>
</web-app>
